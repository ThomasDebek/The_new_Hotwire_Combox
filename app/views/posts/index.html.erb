<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Posts" %>

  <div class="flex justify-between items-center mb-4">
    <h1 class="font-bold text-4xl">Posts</h1>
    <%= link_to "New post", new_post_path, class: "rounded-lg py-3 px-5 bg-blue-600 hover:bg-blue-700 text-white block font-medium transition duration-300" %>
  </div>


  <%= render "posts/combobox" %>

  <div id="posts" class="min-w-full">
    <% @posts.each do |post| %>
      <%= render post %>
      <p>
        <%= link_to "Show this post", post, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 hover:bg-gray-200 text-black inline-block font-medium transition duration-300" %>
        <%= link_to "Edit this post", edit_post_path(post), class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 hover:bg-gray-200 text-black inline-block font-medium transition duration-300" %>

      </p>
    <% end %>
  </div>
</div>
